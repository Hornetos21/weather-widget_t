{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "declaration": true,
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,

    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
